extends ../layout

block content
  .page-header
    h1 
        | #{user.profile.city}&nbsp;
    span.h3 Report Problem
  .row
    .col-sm-8.col-sm-offset-2
      form.form-horizontal
        .form-group
          label.col-sm-3.text-right(for='problemName') Problem Name
          .col-sm-9
            input.form-control#problemName(type='text' name='problemName' placeholder='Problem Name')
        .form-group
          label.col-sm-3.text-right(for='problemDesc') Problem Description
          .col-sm-9
            textarea.form-control#problemDesc(rows='10' name='problemDesc' placeholder='Problem description')
        .form-group
          label.col-sm-3.text-right(for='problemBudget') Estimated Budget
          .col-sm-9
            input.form-control#problemBudget(type='text' name='problemBudget' placeholder='Estimated Budget')
        .form-group
          label.col-sm-3.text-right(for='problemTime') Estimated Time
          .col-sm-9
            input.form-control#problemTime(type='text' name='problemTime' placeholder='Estimated Time to Complete')
        .form-group
          label.col-sm-3.text-right(for='problemImages') Images
          .col-sm-9
            input.form-control#problemImages(type='file' name='problemImages')
        .form-group
          .col-sm-9.col-sm-offset-3
            button.btn.btn-success.btn-lg(type='submit') Submit